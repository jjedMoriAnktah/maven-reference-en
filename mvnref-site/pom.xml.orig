  <artifactId>mvnref-site</artifactId>
  <packaging>jar</packaging>
  <name>Maven: The Complete Reference (Site)</name>
  <description>A book about Apache Maven 2.x</description>
  <build>
      <plugins>
          <plugin>
              <artifactId>maven-dependency-plugin</artifactId>
              <executions>
	              <execution>
	                  <id>unpack-html</id>
	                  <phase>site</phase>
	                  <goals>
	                      <goal>unpack</goal>
	                  </goals>
	                  <configuration>
	                      <artifactItems>
	                          <artifactItem>
		                          <groupId>${project.groupId}</groupId>
		                          <artifactId>mvnref-html</artifactId>
		                          <version>${project.version}</version>
	                          </artifactItem>
	                      </artifactItems>
	                      <outputDirectory>${basedir}/target/site/reference</outputDirectory>
	                  </configuration>
	              </execution>
	              <execution>
	                  <id>copy-examples</id>
	                  <phase>site</phase>
	                  <goals>
	                      <goal>copy</goal>
	                  </goals>
	                  <configuration>
	                      <artifactItems>
	                          <artifactItem>
		                          <groupId>${project.groupId}</groupId>
		                          <artifactId>mvnref-examples</artifactId>
		                          <version>${project.version}</version>
		                          <classifier>project</classifier>
		                          <type>zip</type>
	                          </artifactItem>
	                      </artifactItems>
	                      <outputDirectory>${basedir}/target/site/</outputDirectory>
	                  </configuration>
	              </execution>
	              <execution>
	                  <id>copy-pdf</id>
	                  <phase>site</phase>
	                  <goals>
	                      <goal>copy</goal>
	                  </goals>
	                  <configuration>
	                      <artifactItems>
	                          <artifactItem>
		                          <groupId>${project.groupId}</groupId>
		                          <artifactId>mvnref-pdf</artifactId>
		                          <version>${project.version}</version>
		                          <type>pdf</type>
	                          </artifactItem>
	                      </artifactItems>
	                      <outputDirectory>${basedir}/target/site/pdf</outputDirectory>
	                      <stripVersion>true</stripVersion>
	                  </configuration>
	              </execution>
	              <execution>
	                  <id>copy-epub</id>
	                  <phase>site</phase>
	                  <goals>
	                      <goal>copy</goal>
	                  </goals>
	                  <configuration>
	                      <artifactItems>
	                          <artifactItem>
		                          <groupId>${project.groupId}</groupId>
		                          <artifactId>mvnref-epub</artifactId>
		                          <version>${project.version}</version>
		                          <type>epub</type>
	                          </artifactItem>
	                      </artifactItems>
	                      <outputDirectory>${basedir}/target/site/epub</outputDirectory>
	                      <stripVersion>true</stripVersion>
	                  </configuration>
	              </execution>
              </executions>
          </plugin>
          <plugin>
              <groupId>org.sonatype.book</groupId>
              <artifactId>book-sitemesh-plugin</artifactId>
              <version>1.0</version>
              <executions>
                  <execution>
                      <id>mesh-velocity</id>
                      <phase>site</phase>
                      <goals>
                          <goal>mesh-velocity</goal>
                      </goals>
                      <configuration>
                          <velocityTemplate>src/main/resources/vm/book-template.html</velocityTemplate>
                      </configuration>
                  </execution>
              </executions>
          </plugin>
      </plugins>
  </build>
  <reporting>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-project-info-reports-plugin</artifactId>
              <version>2.0.1</version>
              <reportSets>
                  <reportSet>
                      <reports>
                      </reports>
                  </reportSet>
              </reportSets>
          </plugin>
      </plugins>
  </reporting>
