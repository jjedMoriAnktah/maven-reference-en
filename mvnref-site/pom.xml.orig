  </profile>
  <profile>
    <id>stage-external</id>
    <distributionManagement>
      <site>
          <id>sonatype-site</id>
          <name>Sonatype Book Examples</name>
          <url>scp://deployer@sonatype-marketing01.managed.contegix.com/var/www/domains/sonatype.com/www/shared/books/mvnref-book-stage/</url>
        </site>
    </distributionManagement>
  </profile>
</profiles>
</project>
